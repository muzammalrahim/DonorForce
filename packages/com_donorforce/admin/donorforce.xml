<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" version="3.1" method="upgrade">
  <name>DonorForce</name>
  <version>1.14.14</version>
  <creationDate>May 24, 2014</creationDate>
  <author>Muzz</author>
  <authorEmail>creative.joomdev@gmail.com </authorEmail>
  <authorUrl>www.creativetech-solutions.com</authorUrl>  
  <copyright>2015 creativetech-solutions.com</copyright>
  <license>Open Source License, GNU GPL</license>
  <description>Donor Force Component</description>
  <scriptfile>script.php</scriptfile>
  <files folder="site">
    <filename>donorforce.php</filename>
    <filename>controller.php</filename>
    <filename>index.html</filename>
    <folder>assets</folder>
    <folder>controllers</folder>
    <folder>models</folder>
    <folder>helpers</folder>
    <folder>views</folder>
  </files>
  <languages folder="site">
      <language tag="en-GB">en-GB.com_donorforce.ini</language>
      <language tag="en-GB">en-GB.com_donorforce.sys.ini</language>
    </languages>
  <update>
    <schemas>
      <schemapath type="mysql">sql/updates/mysql</schemapath>
    </schemas>
  </update>
  <install>
    <sql>
      <file charset="utf8" driver="mysql">install.sql</file>
    </sql>
  </install>
  <uninstall> <!-- Runs on uninstall -->
		<sql>
			<!-- <file driver="mysql" charset="utf8">sql/uninstall.sql</file> -->
		</sql>
  </uninstall>
  <administration>
    <menu img="" link="option=com_donorforce">COM_DONORFORCE</menu>
    <files folder="admin">
	  <filename>access.xml</filename>
      <filename>donorforce.php</filename>
      <filename>controller.php</filename>
      <filename>config.xml</filename>
      <filename>index.html</filename>
      <filename>install.sql</filename>
      <folder>assets</folder>
      <folder>controllers</folder>
	  <folder>elements</folder>
      <folder>helpers</folder>
      <folder>lib</folder>
      <folder>sql</folder>
      <folder>models</folder>
      <!--<folder>plugins</folder>-->
      <folder>tables</folder>
      <folder>views</folder>
    </files>
    <languages folder="admin">
      <language tag="en-GB">en-GB.com_donorforce.ini</language>
      <language tag="en-GB">en-GB.com_donorforce.sys.ini</language>
    </languages>
	
	
  </administration>
</extension>