<?xml version="1.0" encoding="utf-8"?>
<extension version="3.4.1" type="plugin" group="content" method="upgrade">
<name>Donor Force - Content Plugin</name>
 <creationDate>20 April 2015</creationDate>
 <author>Netwise Multimedia</author>
 <copyright>Netwise Multimedia</copyright>
 <license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
 <authorEmail>brent@netwisemultimedia.co.za</authorEmail>
 <authorUrl>http://www.netwisemm.co.za/</authorUrl>
 <version>3.0.2</version>
 <description>Donor Force is a Joomla Extension for organisation accepting donations, It makes the Donation process simple for Donors</description>
 <scriptfile>script.php</scriptfile>
	<files>
		<filename plugin="donorforceprojects">donorforceprojects.php</filename>
		<filename>index.html</filename>
	</files>
	
	<config name="params">
		<fields name="params">
			<fieldset name="basic">
				
				<field 
					name="show_snapscan_image" 
					type="radio" 
					class="btn-group"
					default="1" 
					label="Snapscan Image on Plugin Projects" 
					description="Show Snapscan Image on Each Project of the Plugin 'Donor Force - Content Plugin' ">
						<option value="1">JYES</option>
						<option value="0">JNO</option>
				</field>
				
				<field 
					name="show_amount_raised" 
					type="radio" 
					class="btn-group"
					default="1" 
					label="Show Amount Raised" 
					description="Show Amount Raised on Each Project of the Plugin 'Donor Force - Content Plugin' ">
						<option value="1">JYES</option>
						<option value="0">JNO</option>
				</field>
					
				<field 
					name="show_project_title" 
					type="radio" 
					class="btn-group"
					default="1" 
					label="Show Project Title" 
					description="Show Project Title">
						<option value="1">JYES</option>
						<option value="0">JNO</option>
				</field> 
					
				<field 
						name="show_start_end_date" 
						type="radio" 
						class="btn-group"
						default="1" 
						label="Show Start and End Dates" 
						description="Show Project Start and End Dates">
							<option value="1">JYES</option>
							<option value="0">JNO</option>
				</field>
					
				<field 
						name="show_project_image" 
						type="radio" 
						class="btn-group"
						default="1" 
						label="Show Project Image" 
						description="Show Project Image">
							<option value="1">JYES</option>
							<option value="0">JNO</option>
				</field>  
				
		 			
			</fieldset>
		</fields>
	</config>
	
</extension>
